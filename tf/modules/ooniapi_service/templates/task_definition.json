[
  {
    "cpu": ${task_cpu},
    "essential": true,
    "image": "${image_url}",
    "memory": ${task_memory},
    "name": "${container_name}",
    "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": 0
      }
    ],
    "secrets": ${secrets_json},
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group_name}",
            "awslogs-region": "${log_group_region}"
        }
    }
  }
]